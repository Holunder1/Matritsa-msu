class Person:
    marks = []
    def __init__(self, name, sex, age, subjects):
        self.name = name
        self.sex = sex
        self.age = age
        if 1 <= subjects <= 10:
            self.subjects = subjects
        else:
            raise ValueError("Wrong num of subjects")


    def __str__(self):
        return f"My name is {self.name} and i am {self.age} years old, also I have {self.subjects} subjects"


    def setMarks(self, marks:list):
        if type(marks) == str:
            marks = "".join(marks.split(";"))
            marks = [int(i) for i in marks.split()]
        if not len(marks) == self.subjects:
            raise ValueError("Wrong num of marks")
        for mark in marks:
            if not 0 <= mark <= 10:
                raise ValueError("Wrong type of mark")
        self.marks = marks


def main():
    a = Person("Vova", 1, 12, 3)
    a.setMarks([1, 2, 3])
    print(a)


if __name__ == "__main__":
    main()
